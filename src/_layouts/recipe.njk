---
layout: base.njk
---

<section class="section">
  <div class="container">
    {# Breadcrumbs #}
    <nav class="breadcrumb" aria-label="breadcrumbs">
      <ul>
        <li><a href="/">Home</a></li>
        {% for crumb in page | buildBreadcrumbs %}
          {% if crumb.isLast %}
            <li class="is-active"><a href="{{ crumb.url }}" aria-current="page">{{ crumb.title | titleCase }}</a></li>
          {% else %}
            <li><a href="{{ crumb.url }}">{{ crumb.title | titleCase }}</a></li>
          {% endif %}
        {% endfor %}
      </ul>
    </nav>

    <article class="content">
      <h1 class="title">{{ title }}</h1>
      {{ content | safe }}
    </article>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    if (window.enableWakeLock) {
      window.enableWakeLock();
    }
    if (window.initRecipeScaling) {
      window.initRecipeScaling();
    }
    if (window.initListItemToggle) {
      window.initListItemToggle();
    }
  });
</script>
