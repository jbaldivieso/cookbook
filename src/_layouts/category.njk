---
layout: base.njk
---
{% from "nav-tree.njk" import renderNavTree %}

<section class="section">
  <div class="container">
    {# Breadcrumbs #}
    <nav class="breadcrumb" aria-label="breadcrumbs">
      <ul>
        <li><a href="/">Home</a></li>
        {% for crumb in page | buildBreadcrumbs %}
          {% if crumb.isLast %}
            <li class="is-active"><a href="{{ crumb.url }}" aria-current="page">{{ crumb.title | titleCase }}</a></li>
          {% else %}
            <li><a href="{{ crumb.url }}">{{ crumb.title | titleCase }}</a></li>
          {% endif %}
        {% endfor %}
      </ul>
    </nav>

    <h1 class="title">{{ title }}</h1>
    {% if description %}
      <p class="subtitle">{{ description }}</p>
    {% endif %}

    <nav class="toc">
      {% set children = navigation | getChildren(page.url) %}
      {{ renderNavTree(children) }}
    </nav>
  </div>
</section>
